package = llvm

headers = \
    llvm-c/Core.h llvm-c/Target.h llvm-c/Analysis.h llvm-c/BitWriter.h \
    llvm-c/BitReader.h llvm-c/Transforms/PassManagerBuilder.h llvm-c/Transforms/IPO.h \
    llvm-c/TargetMachine.h llvm-c/Target.h llvm-c/Linker.h llvm-c/Initialization.h \
    llvm-c/DebugInfo.h

headerFilter = llvm-c/* llvm-c/**/*

strictEnums = LLVMIntPredicate LLVMOpcode LLVMDLLStorageClass LLVMCallConv LLVMThreadLocalMode LLVMAtomicOrdering

compilerOpts.linux = -I/usr/lib/llvm-13/include \
    -shared -fPIC \
    -std=c99 -pedantic

linkerOpts.linux = -l/usr/lib/llvm-13/lib/libLLVM-13.so

libraryPaths.linux = /usr/lib/llvm-13/lib
